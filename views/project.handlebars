<div class="mb-3">
  <a href="/" class="text-decoration-none">&larr; Back to projects</a>
</div>

<div class="card">
  <div class="card-body">
    <h1 class="h4">{{project.name}}</h1>
    <p class="text-muted mb-2">Created by
      <strong>{{project.user.name}}</strong>
      on
      {{format_date project.date_created}}</p>
    <p class="mb-3">{{project.description}}</p>

    <div class="d-flex gap-3 align-items-center">
      <span class="badge text-bg-warning">Needed: ${{needed_funding
          project.needed_funding
        }}</span>
    </div>
  </div>
</div>